{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "typescript.preferences.importModuleSpecifier": "relative",
  "files.associations": {
    "*.json": "jsonc"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/out": true,
    "**/*.vsix": true,
    "**/coverage": true
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/out": true,
    "**/*.vsix": true
  },
  "eslint.validate": [
    "typescript",
    "javascript"
  ]
}